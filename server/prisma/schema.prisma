generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
}

model City {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  locations   location[]
}

model location {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  city          City   @relation(fields: [cityId], references: [id])
  cityId        String @db.ObjectId
  name          String
  description   String
  exactLocation String
  distFromStn   String
  longitude     String?
  latitude      String?
  iframe        String
}
